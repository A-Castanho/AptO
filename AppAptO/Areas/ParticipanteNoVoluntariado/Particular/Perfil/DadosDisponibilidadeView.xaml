                            </Grid>
                        </ViewCell>
                        <ViewCell>
                            <Grid ColumnDefinitions="*,0.5,2*" >
                                <Label Text="Fim:" FontAttributes="Bold" Grid.Column="0"/>
                                <BoxView Style="{StaticResource LinhaVertical}" Grid.Column="1"/>
                                <Label Text="{Binding Utilizador.Disponibilidade.Quinta.Fim}" Grid.Column="2"/>
                            </Grid>
                        </ViewCell>
                    </TableSection>
                    <TableSection Title="Sexta">
                        <ViewCell>
                            <Grid ColumnDefinitions="*,0.5,2*" >
                                <Label Text="Início:" FontAttributes="Bold" Grid.Column="0"/>
                                <BoxView Style="{StaticResource LinhaVertical}" Grid.Column="1"/>
                                <Label Text="{Binding Utilizador.Disponibilidade.Sexta.Inicio}" Grid.Column="2"/>
                            </Grid>
                        </ViewCell>
                        <ViewCell>
                            <Grid ColumnDefinitions="*,0.5,2*" >
