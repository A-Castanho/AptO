<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppAptO.Areas.Admin.AreaAdmin.AdminMainPage"
             Title="Administração">

    <ContentPage.Resources>
        <Style TargetType="Button">
            <Setter Property="Background" Value="{DynamicResource LGBPrimaryToDark}"/>
            <Setter Property="Padding" Value="20"/>
        </Style>
    </ContentPage.Resources>
    <ContentPage.Content>
        <StackLayout VerticalOptions="CenterAndExpand" Spacing="60" Margin="10">
            <Button Text="Enviar Notificões" x:Name="btnNotificacoes"
                    Clicked="btnNotificacoes_Clicked"/>
            <Button Text="Mensagens Iniciais" x:Name="btnSabiasQue"
                    Clicked="btnSabiasQue_Clicked"/>
            <Button Text="Publicidades" x:Name="btnPublicidade"
                    Clicked="btnPublicidade_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>